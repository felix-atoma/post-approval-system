generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")  // âœ… Add this line
}
// Changed from "User" to "user" (lowercase)
model user {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String
  role          Role           @default(USER)
  password      String?
  passwordReset Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  posts         post[]
  refreshTokens refreshToken[]
  reviewedPosts post[]         @relation("ReviewedPosts")

  // Changed map to match actual table name
  @@map("users")
  @@index([email])
  @@index([role])
  @@index([createdAt])
}

// Changed from "Post" to "post" (lowercase)
model post {
  id              String     @id @default(cuid())
  title           String     @db.VarChar(200)
  content         String
  status          PostStatus @default(PENDING)
  rejectionReason String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  userId          String
  user            user       @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviewedById    String?
  reviewedBy      user?      @relation("ReviewedPosts", fields: [reviewedById], references: [id])

  @@map("posts")
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([userId, status])
}

// Changed from "RefreshToken" to "refreshToken" (lowercase)
model refreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

enum Role {
  ADMIN
  USER
  PENDING
  EDITOR
}

enum PostStatus {
  PENDING
  APPROVED
  REJECTED
}